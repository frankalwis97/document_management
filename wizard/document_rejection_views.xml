<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="document_rejection_view_form" model="ir.ui.view">
        <field name="name">document.rejection.view.form</field>
        <field name="model">document.rejection</field>
        <field name="arch" type="xml">
            <form string="Rejection Request">
                <group>
                    <field name="document_id"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_reject_document" class="oe_highlight" string="Confirm" type="object" />
                </footer>
            </form>
        </field>
    </record>
</odoo>